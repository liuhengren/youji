<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<Button
    android:text="X"
    android:layout_marginTop="31dp"
    android:layout_marginLeft="28dp"
    android:background="#00ffffff"
    android:id="@+id/btn_cancel"
    android:layout_width="24dp"
    android:layout_height="24dp" />
    <TextView
        android:id="@+id/tv_contact_author"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="286dp"
        android:text="联系作者"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="游迹"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="开启你的旅程"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="63dp"
        android:layout_marginTop="217dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <EditText
        android:id="@+id/et_userPhone"
        android:hint="请输入手机号"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="217dp"
        android:textSize="14sp"
        android:layout_width="186dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="63dp"
        android:layout_marginTop="259dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <EditText
        android:id="@+id/et_user_password"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="259dp"
        android:textSize="14sp"
        android:layout_width="186dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_login"
        android:text="登录"
        android:background="@drawable/module_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="326dp"
        android:layout_width="215dp"
        android:layout_height="38dp" />
    <TextView
    android:id="@+id/tv_logup"
    android:layout_marginLeft="91dp"
    android:layout_marginTop="395dp"
    android:text="用户注册"
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_find_password"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="395dp"
        android:text="找回密码"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_login_qq"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="453dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <Button
        android:id="@+id/btn_login_wechat"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="452dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />


    <TextView
        android:id="@+id/tv_user_agreement"
        android:gravity="center"
        android:layout_marginTop="604dp"
        android:text="用户协议"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>