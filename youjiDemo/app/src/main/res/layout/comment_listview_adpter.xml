<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/ll_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reply_me"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:text="回复@iBeyond丶:我们之间的距离好像忽远又忽进" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v_top"
            android:layout_width="284dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#999999" />
        <View
            android:id="@+id/v_left"
            android:layout_width="1dp"
            android:layout_height="99dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/v_top"
            android:background="#999999" />
        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/v_left"
            android:text=" @iBeyond:有一种感觉我想说明。" />
        <ImageView
            android:id="@+id/iv_picture"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/v_left"
            android:src="@drawable/test"
            android:layout_width="65dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="215dp"
            android:layout_height="62dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/iv_picture"
            android:text="你明明不在我身边我一直觉得很亲，有一种感觉我要告诉你。" />
        <View
            android:id="@+id/v_bottom"
            android:layout_width="284dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:background="#999999" />
        <View
            android:layout_toRightOf="@+id/v_bottom"
            android:layout_width="1dp"
            android:layout_height="99dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:background="#999999" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>