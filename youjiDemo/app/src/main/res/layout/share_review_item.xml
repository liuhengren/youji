<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_review_user_header"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/tv_review_username"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/image_review_user_header"
            android:maxWidth="40dp"
            android:text="保温杯里泡枸杞"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_review_like"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/tv_review_username"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tv_review_username"
            android:layout_marginRight="-51dp"
            android:layout_marginBottom="-7dp"
            android:layout_toLeftOf="@+id/ib_review_like"
            android:text="23" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_review_user_header"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@+id/image_review_user_header"
            android:text="卡路里卡路里李卡路里，燃烧我的卡路里" />

        <Button
            android:id="@+id/btn_review"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/tv_review"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/image_review_user_header"
            android:background="@color/trans"
            android:text="回复"
            android:textColor="@color/lightgray" />

        <TextView
            android:layout_width="81dp"
            android:layout_height="18dp"
            android:layout_below="@+id/tv_review"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/btn_review"
            android:text="2018/05/06"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />
</LinearLayout>