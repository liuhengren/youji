<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--一.Banner 图-->
    <RelativeLayout
        android:id="@+id/rl_banner"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:background="@drawable/banner">
        //1.返回图标

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/left" />
        //2.“美食”两个字

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="美食"
            android:textSize="28dp"
            android:id="@+id/tv_food_text"/>
        //3.“唯美食与爱不可辜负”字体

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="唯美食与爱不可辜负"
            android:textSize="16dp"
            android:layout_below="@id/tv_food_text"
            />
    </RelativeLayout>

    <!--二.推荐与广场框-->
    <RelativeLayout
        android:id="@+id/rl_recommend"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@id/rl_banner"
        android:background="@color/gray">
        //1.推荐

        <View
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"

            android:layout_alignLeft="@id/tv_recommend_text"
            android:layout_marginLeft="-30dp"
            android:background="@color/lightgray"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105dp"
            android:text="推荐"
            android:textSize="20dp"
            android:id="@+id/tv_recommend_text"/>

        <View
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@color/lightgray"
            android:layout_toRightOf="@id/tv_recommend_text"
            android:layout_marginLeft="30dp"
            />
        //2.广场

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="211dp"
            android:text="广场"
            android:textSize="20dp"
            android:id="@+id/tv_square_text"/>


        <View
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@color/lightgray"
            android:layout_toRightOf="@id/tv_square_text"
            android:layout_marginLeft="30dp"/>

    </RelativeLayout>

    <!--三.用户发表的动态-->
    
    <ListView
        android:id="@+id/lv_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_recommend"/>


</RelativeLayout>